{
  "monitoring": {
    "treatReadEmailsAsProcessed": true,
    "scanInterval": 30000,
    "autoStart": true,
    "enableEventLogging": true,
    "eventDebounceMs": 1000,
    "maxEmailsPerFolder": 500,
    "simplifiedMode": true,
    "enableVBAMetrics": true,
    "weeklyStockTracking": true
  },
  "metrics": {
    "daily": {
      "trackReceived": true,
      "trackProcessed": true,
      "trackUnread": true,
      "trackReadStatusChanges": true
    },
    "weekly": {
      "trackStockEvolution": true,
      "trackArrivals": true,
      "trackTreatments": true,
      "compareWithPrevious": true
    },
    "folders": {
      "trackDistribution": true,
      "trackReadStatusByFolder": true,
      "enableCategoryStats": true
    }
  },
  "ui": {
    "theme": "default",
    "language": "fr",
    "emailsLimit": 20,
    "showAdvancedFeatures": false,
    "showWeeklyMetrics": true,
    "showStockTracking": true
  },
  "notifications": {
    "showStartupNotification": true,
    "showMonitoringStatus": true,
    "enableDesktopNotifications": false,
    "alertOnStockChanges": true
  }
}