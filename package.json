{
  "name": "mailmonitor",
  "version": "0.9.8",
  "description": "Application de monitoring des emails Outlook avec interface moderne",
  "main": "src/main/index.js",
  "scripts": { 
  "start": "npx electron .",
  "import-activity": "node src/cli/import-activity.js",
  "test:carry": "set ELECTRON_RUN_AS_NODE=1&& npx electron scripts/test-carry-over.js",
  "postinstall": "electron-builder install-app-deps",
  "version:bump": "node -e \"const p=require('./package.json');const v=p.version;console.log('Current',v);\"",
  "release": "npx electron-builder --win --x64 --publish always"
  },
  "keywords": [
    "electron",
    "outlook",
    "email",
    "monitoring",
    "dashboard"
  ],
  "author": {
    "name": "Tanguy Raingeard",
    "email": "erkaekanon@outlook.com"
  },
  "license": "LICENSED",
  "copyright": "Copyright (c) 2025 Tanguy Raingeard. Tous droits réservés.",
  "dependencies": {
    "better-sqlite3": "^12.2.0",
  "electron-updater": "^6.1.8",
  "xlsx": "^0.18.5",
    "node-cache": "^5.1.2"
  },
  "devDependencies": {
  "electron": "^37.2.5",
  "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.tanguy.mailmonitor",
    "productName": "Mail Monitor",
    "directories": {
      "output": "dist"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Erkaek",
        "repo": "AutoMailMonitor",
        "releaseType": "release",
        "private": false
      }
    ],
    "files": [
      "src/**/*",
      "public/**/*",
      "data/**/*",
      "config/**/*",
  "resources/new logo/**/*",
      "package.json",
  "node_modules/better-sqlite3/**/*"
    ],
    "extraResources": [
      {
        "from": "node_modules/better-sqlite3/build/Release/",
        "to": "app.asar.unpacked/node_modules/better-sqlite3/build/Release/",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": "nsis",
  "icon": "resources/new logo/logo.ico",
  "signingHashAlgorithms": ["sha256"],
  "rfc3161TimeStampServer": "http://timestamp.digicert.com"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
